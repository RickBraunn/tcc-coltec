{% extends 'layouts/dashboard.html.twig' %}


{% block title %}| Administrador | Editar{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="/dist/css/iziToast.min.css">
{% endblock %}

{% block breadcrumb %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Admin
            <small>Editar</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active"><a href="/admin">Categoria</a></li>
        </ol>
    </section>
{% endblock %}


{% block content %}
    <section class="content">

        <div class="row">
            <div class="col-12">

                <div class="box box-primary">
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" action="/admin/salvareditar" method="post" class="jsonForm">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="id_adm">CÃ³digo</label>
                                <input type="number" class="form-control" id="id_adm" name="id_adm" readonly value="{{ linha['id_adm'] }}">
                            </div>
                            <div class="form-group">
                                <label for="nome_adm">Nome</label>
                                <input type="text" class="form-control" id="nome_adm" name="nome_adm" placeholder="Nome do Admin" required value="{{ linha['nome_adm'] }}">
                            </div>
                            <div class="form-group">
                                <label for="senha_adm">Senha</label>
                                <input type="password" class="form-control" id="senha_adm" name="senha_adm" placeholder="Senha do Admin" required value="{{ linha['senha_adm'] }}">
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Salvar</button>
                            <button type="button"  onclick="Evento()" class="btn btn-primary">Alterar Senha</button>
                        </div>
                        <script>
                                 function Evento(){
                                 window.location.href = '/admin/formSenha'
                                 }
                                </script>
                    </form>
                </div>

            </div>
        </div>
        <!-- /.row -->
    </section>

{% endblock %}



{% block javascriptPlugins %}
    <script src="/dist/js/jquery.form.js"></script>
    <script src="/dist/js/iziToast.min.js"></script>
{% endblock %}

{% block jquery %}
    <script>
        $(document).ready(function(){
            $('.jsonForm').ajaxForm({
                dataType:  'json',

                success:   function(d){
                    if (d.status==0){
                        iziToast.error({
                            message: d.mensagem
                        });
                    }else{
                        iziToast.success({
                            message: d.mensagem,
                            onClosed: function(){
                                document.location = "/admin";
                            }
                        });

                    }
                }

            });
        });
    </script>
{% endblock %}

{% block javascript %}
{% endblock %}
