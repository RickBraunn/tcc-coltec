{% extends 'layouts/dashboard.html.twig' %}


{% block title %}| Lista | Solicitações
{% endblock %}
{% block stylesheet %}
	<link rel="stylesheet" href="/dist/css/iziToast.min.css">
{% endblock %}

{% block breadcrumb %}
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<h1>
			Lista de Solicitações
			<small></small>
		</h1>
		<ol class="breadcrumb">
			<li>
				<a href="/advogado/">
					<i class="fa fa-dashboard"></i>
					Home</a>
			</li>
		</ol>
	</section>
{% endblock %}


{% block content %}
	<section class="content">

		<div class="col-12">


			{% for solicitacao in solicitacoes %}
				<div class="box box-primary">
					<div class="box-body">

						<div class="row">
							<div class="col-lg-4">
								<div class="card">
									<form role="form" action="/solicitacao/#" method="post">

										<h3>
											<b>Enviado para o advogado:<br></b>
											{{ solicitacao.nome_adv }} {{solicitacao.sobrenome_adv}}</h3>
                                        <h4>
											<b>Enviado por:</b>
											{{ solicitacao.nome_cli }} {{solicitacao.sobrenome_cli}}</h4>

                                            <h5><b>Enviado em: {{solicitacao.data_hora|date("d/m/Y H:i", "America/Sao_Paulo")}}</b></h5><br>


										<p>
											Descrição:
											{{ solicitacao.descricao}}</p>

										{% if solicitacao.status_solicitacoes == 'Pendente' %}

											<p>Status:
												<span class="label label-warning">{{solicitacao.status_solicitacoes}}
												</span>
											</p>
                                            <div class="col-md-8">
                                            <div class="box box-warning  box-solid">
                                            <div class="box-header">
                                                <h3 class="box-title">Solicitação Pendente!</h3>
                                            </div>
                                            <div class="box-body">
                                                Esperando pelo Advogado...
                                            </div>
                                                <!-- /.box-body -->
                                                <!-- Loading (remove the following to stop the loading)-->
                                            <div class="overlay">
                                            <i class="fa fa-refresh fa-spin"></i>
                                            </div>
                                            <!-- end loading -->
                                            </div>
                                             <!-- /.box -->
                                            </div>

										{% elseif solicitacao.status_solicitacoes == 'Recusado'%}

											<p>Status:
												<span class="label label-danger">{{solicitacao.status_solicitacoes}}
												</span>
											</p>
                                            <div class="row">
                                            <div class="col-md-8">
                                             <div class="box box-danger  collapsed-box box-solid">
                                                <div class="box-header with-border">
                                                    <h3 class="box-title">Solicitação Recusada!</h3>

                                                    <div class="box-tools pull-right">
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
                                            </button>
                                            </div>
                                         <!-- /.box-tools -->
                                             </div>
                                            <!-- /.box-header -->
                                            <div class="box-body">
                                                    Infelizmente sua solicitação foi recusada! :(
                                            </div>
                                             <!-- /.box-body -->
                                             </div>
                                         <!-- /.box -->
                                        </div>
                                        </div>

										{% elseif solicitacao.status_solicitacoes == 'Aceito'%}

											<p>Status:
												<span class="label label-success">{{solicitacao.status_solicitacoes}}
												</span>
											</p>
                                        <div class="row">
                                            <div class="col-md-8">
                                             <div class="box box-success  collapsed-box box-solid">
                                                <div class="box-header with-border">
                                                    <h3 class="box-title">Solicitação Aceita!</h3>

                                                    <div class="box-tools pull-right">
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
                                            </button>
                                            </div>
                                         <!-- /.box-tools -->
                                             </div>
                                            <!-- /.box-header -->
                                            <div class="box-body">
                                                    Sua solicitação foi aceita pelo Advogado,
                                                    entre em contato atraves do email: <b>{{solicitacao.email_adv}}</b>
                                            </div>
                                             <!-- /.box-body -->
                                             </div>
                                         <!-- /.box -->
                                        </div>
                                        </div>

											

										{% endif %}
                                        <input type='hidden' name='id_solicitacoes' id='id_solicitacoes' value='{{ solicitacao.id_solicitacoes }}'>

											<input type='hidden' name='id_cli' id='id_cli' value='{{ solicitacao.id_cli }}'>

									</form>


								</div>
							</div>
						</div>
					</div>
				</div>


			{% endfor %}
			<!-- /.box-body -->

			<div class="box-footer"></div>
		</div>

	</div>
</div>
<!-- /.row --></section>

{% endblock %}

{% block javascriptPlugins %}<script src="/dist/js/jquery.form.js"></script><script src="/dist/js/iziToast.min.js"></script>{% endblock %}
{% block jquery %}
	<script>

	</script>
{% endblock %}
