    <link rel="stylesheet" href="/dist/css/style.css">
    <link rel="stylesheet" href="/dist/css/iziToast.min.css">
    <!-- /custom style sheet -->
    <!-- fontawesome css -->
    <link rel="stylesheet" href="/dist/css/fontawesome-all.css">
    <!-- /fontawesome css -->
