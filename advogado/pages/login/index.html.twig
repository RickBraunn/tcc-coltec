    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
    <!-- /google fonts-->

</head>


<body>
    <h1>Busca de Advogados</h1>
    <div class=" w3l-login-form">
        <h2>Iniciar sessão Advogados</h2>
        <form action="/login/verificar" method="POST" class="jsonForm">

            <div class=" w3l-form-group">
                <label>Nome de Usuario:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" id="nome_usuario_adv" name="nome_usuario_adv" placeholder="Nome de Usuario" required="required" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Senha:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" id="senha_adv" name="senha_adv" placeholder="Senha" required="required" />
                </div>
            </div>
            <div class="forgot">
            </div>
            <button type="submit">Login</button>
        </form>
        <p class=" w3l-register-p">Não possui uma conta?<a href="/advogados/formcadastrar/" class="register"> Cadastrar-se</a></p>
    </div>
    <footer>
        <p class="copyright-agileinfo"> &copy; 2018 Material Login Form. All Rights Reserved | Design by <a href="http://w3layouts.com">W3layouts</a></p>
    </footer>
<script src="/bower_components/jquery/dist/jquery.min.js"></script>

<script src="/dist/js/jquery.form.js"></script>
<script src="/dist/js/iziToast.min.js"></script>
<script>
    $(document).ready(function(){
        $('.jsonForm').ajaxForm({
            dataType:  'json',

            success:   function(d){
                if (d.status==0){
                    iziToast.error({
                        message: d.mensagem
                    });
                }else{
                    iziToast.success({
                        message: d.mensagem
                    });
                    setTimeout(function(){
                      document.location = '/advogado/';
                    }, 2000);

                    $('.jsonForm').trigger("reset");
                }
            }

        });
    });
</script>

</body>


</html>