{% extends 'layouts/dashboard.html.twig' %}

{% block title %} | Advogado | Listagem{% endblock %}
{% block stylesheet %}


{% endblock %}

{% block breadcrumb %}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Menu do Advogado
    </h1>
 <!--   <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Advogados</li>
    </ol> -->
</section>
{% endblock %}

{% block content %}
<div class='row'>
<div class="col-lg-3 col-xs-6">

    <div class="small-box bg-aqua">
        <div class="inner">
            <h3>Cadastrar OAB</h3>
    
            <p>Cadastre um numero de OAB valido.</p>
        </div>
        <div class="icon">
            <i class="fa fa-plus-square"></i>
        </div>
        <a href="/oab/formcadastrar" class="small-box-footer">
            Leve-me lá <i class="fa fa-arrow-circle-right"></i>
        </a>
    </div>
</div>
<div class="col-lg-3 col-xs-6">
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>Lista de OAB</h3>
            
                    <p>Veja suas OABs</p> 
                </div>
                <div class="icon">
                    <i class="fa fa-list-alt"></i>
                </div>
                <a href="/oab/" class="small-box-footer">
                    Leve-me lá <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>Adicionar Area</h3>
            
                    <p>Adicione suas areas de atuação.</p>
                </div>
                <div class="icon">
                    <i class="fa fa-check-square"></i>
                </div>
                <a href="/area/formcadastrar" class="small-box-footer">
                    Leve-me lá <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
            </div>
            <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>Editar Perfi</h3>
            
                    <p>Edite seu perfil.</p>
                </div>
                <div class="icon">
                    <i class=" fa fa-cog"></i>
                </div>
                <a href="/advogado/formeditar" class="small-box-footer">
                    Leve-me lá <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
            </div>
    </div>




{% endblock %}


{% block javascriptPlugins %}
<script src="/dist/js/jquery.bootgrid.js"></script>
<script src="/dist/js/jquery.bootgrid.fa.js"></script>
<script src="/dist/js/iziToast.js"></script>
<script src="/dist/js/iziToastExcluir.js"></script>
{% endblock %}

